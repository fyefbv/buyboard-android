<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/CardView_LowElevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/ImageButton_Icon"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_back"
                    app:tint="@color/black"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/favorite_button"
                    style="@style/ImageButton_Icon"
                    android:contentDescription="@string/favorites"
                    android:src="@drawable/ic_like_large"
                    app:tint="@color/gray"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            style="@style/CardView_Default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ad_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Смартфон Samsung Galaxy S21"
                        style="@style/TextAppearance_Title_Medium"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ad_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="25 000 ₽"
                        style="@style/TextAppearance_Price" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/ad_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Электроника"
                        style="@style/Chip_Category" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@color/gray" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ad_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2024-12-14 14:30"
                        style="@style/TextAppearance_Caption" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/location"
                        android:src="@drawable/ic_location"
                        app:tint="@color/gray" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ad_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        tools:text="Москва, Центральный округ"
                        style="@style/TextAppearance_Caption" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ad_description_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    style="@style/TextAppearance_Title_Small"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ad_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Отличное состояние, полная комплектация. Использовался аккуратно, есть все оригинальные аксессуары. Продаю в связи с переходом на новую модель."
                    style="@style/TextAppearance_Body_Large"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            style="@style/CardView_Default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller"
                    style="@style/TextAppearance_Title_Medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/seller_avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Иван Иванов"
                            style="@style/TextAppearance_Title_Small" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="ivan@example.com"
                            style="@style/TextAppearance_Body_Medium"
                            android:textColor="@color/gray" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_member_since"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            tools:text="Зарегистрирован с 2024-09-12"
                            style="@style/TextAppearance_Caption" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            style="@style/CardView_LowElevation">

            <LinearLayout
                android:id="@+id/owner_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="visible">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_management"
                    style="@style/TextAppearance_Title_Medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        style="@style/Button_Secondary"
                        android:text="@string/edit" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deactivate_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        style="@style/Button_Primary"
                        android:text="@string/deactivate" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>