<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            style="@style/Profile_CardSurface"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                style="@style/Profile_CardContainer"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_avatar"
                        style="@style/Profile_AvatarImage"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_name"
                            style="@style/Profile_LoginText"
                            android:text="@string/user_name" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_email"
                            style="@style/Profile_EmailText"
                            android:text="@string/user_email" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_member_since"
                            style="@style/Profile_MemberSinceText"
                            android:text="@string/registered_since" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_profile_button"
                    style="@style/Profile_PrimaryButton"
                    android:text="@string/edit_profile" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Profile_CardSurface"
            android:layout_marginBottom="30dp">

            <LinearLayout
                style="@style/Profile_CardContainer">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Profile_SectionTitle"
                    android:text="@string/my_statistics" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        style="@style/Profile_StatContainer">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/active_ads_count"
                            style="@style/Profile_StatNumberText"
                            android:text="12" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/Profile_StatText"
                            android:text="@string/active_ads" />

                    </LinearLayout>

                    <View
                        style="@style/Profile_VerticalSeparator" />

                    <LinearLayout
                        style="@style/Profile_StatContainer">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/sold_ads_count"
                            style="@style/Profile_StatNumberText"
                            android:text="47" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/Profile_StatText"
                            android:text="@string/sold_ads" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Profile_CardSurface">

            <LinearLayout
                style="@style/Profile_CardContainer">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Profile_SectionTitle"
                    android:text="@string/account_management" />

                <LinearLayout
                    android:id="@+id/my_ads_item"
                    style="@style/Profile_ItemContainer">

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemStartImage"
                        android:src="@drawable/ic_ads" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/Profile_ItemText"
                        android:text="@string/my_ads" />

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemEndImage"
                        android:src="@drawable/ic_chevron_right" />

                </LinearLayout>

                <View
                    style="@style/Profile_HorizontalSeparator" />


                <LinearLayout
                    android:id="@+id/settings_item"
                    style="@style/Profile_ItemContainer">

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemStartImage"
                        android:src="@drawable/ic_settings" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/Profile_ItemText"
                        android:text="@string/settings" />

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemEndImage"
                        android:src="@drawable/ic_chevron_right" />

                </LinearLayout>

                <View
                    style="@style/Profile_HorizontalSeparator" />

                <LinearLayout
                    android:id="@+id/logout_item"
                    style="@style/Profile_ItemContainer">

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemStartImage"
                        android:src="@drawable/ic_logout" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/Profile_ItemText"
                        android:text="@string/logout" />

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Profile_ItemEndImage"
                        android:src="@drawable/ic_chevron_right" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
